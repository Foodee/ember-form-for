<div class="{{config.fieldClasses}} {{strip-class-names classNames}} {{if errors.length 'error'}}">

  {{#if hasBlock}}
    {{yield (hash

              label= (component 'label-for'
                label=label
                controlId=controlId
              )

              control= (component _control
                value=(readonly _value)
                isdisabled=isDisabled
                isreadonly=isReadonly
                controlId=controlId

                onChange=(action handleChange)
              )

              commit-buttons=(component 'commit-buttons'
                visible=(readonly requiresConfirm)

                commit=(action commit)
                cancel=(action cancel)
              )

              errors= (component 'errors-for'
                errors=errors
              )

            )
            this
    }}
  {{else}}

    {{label-for
      label=label
      controlId=controlId
    }}

    {{component _control
                value=(readonly _value)
                isDisabled=isDisabled
                isReadonly=isReadonly
                controlId=controlId

                onChange=(action handleChange)
    }}

    {{commit-buttons
      visible=requiresConfirm

      commit=(action commit)
      cancel=(action cancel)
    }}

    {{errors-for errors=errors}}
  {{/if}}


</div>
