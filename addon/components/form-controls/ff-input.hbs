<input
  id={{@controlId}}
  value={{@value}}
  type={{@inputType}}
  placeholder={{@placeholder}}
  disabled={{@isDisabled}}
  readonly={{@isReadonly}}
  maxlength={{@maxLength}}
  ...attributes
  data-test-ff-control-input
  {{on "blur" this.handleBlur}}
  {{on "focus" this.handleFocus}}
  {{on "click" this.handleClick}}
  {{on "change" this.handleChange}}
  {{on "keyUp" this.handleChange}}
/>