{{#if @errors.length}}
  <div class="errors {{strip-class-names @classNames}}">
    {{#each @errors as |error|}}
      {{#if @customErrorComponent}}
        {{component @customErrorComponent error=error}}
      {{else}}
        <label class="error">
          {{error}}
        </label>
      {{/if}}
    {{/each}}
  </div>
{{/if}}